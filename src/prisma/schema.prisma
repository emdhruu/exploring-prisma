model Post {
  id          String    @id @default(uuid())
  rating      Float
  createdAt   DateTime
  updatedAt   DateTime
  author      User      @relation("writtenPost", fields: [authorId], references: [id])
  authorId    String
  favoritedBy User      @relation("favoritePost", fields: [favoritedId], references: [id])
  favoritedId String
  category Category[]
}

model Category {
  id   String @id @default(uuid())
  post Post[]
}
